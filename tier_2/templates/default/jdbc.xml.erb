<jdbc-connection-info enabled='true'>
<driver-class>com.mysql.jdbc.Driver</driver-class>
<url>jdbc:mysql://<%= @database_url %></url>
<user-name><%= node[:database][:username] %></user-name>
<password><%= node[:database][:password] %></password>
<idle-connection-period>1</idle-connection-period>
<idle-max-age>10</idle-max-age>
<max-partition-connections>5</max-partition-connections>
<min-partition-connections>1</min-partition-connections>
<partition-count>1</partition-count>
<acquire-increment>1</acquire-increment>
<statement-cache-size>100</statement-cache-size>
</jdbc-connection-info>
